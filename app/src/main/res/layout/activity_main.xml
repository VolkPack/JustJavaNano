<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.example.nick.justjava.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantaty_text"
        android:text="@string/quantity"/>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/quantaty_text"
        android:id="@+id/less_button"
        android:src="@drawable/less_img"
        android:scaleType="center"
        android:onClick="subtractDrink"/>
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/quantaty_text"
        android:layout_toRightOf="@+id/number_of_drinks"
        android:id="@+id/more_button"
        android:src="@drawable/more_img"
        android:scaleType="center"
        android:onClick="addDrink"/>
    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/number_of_drinks"
        android:layout_below="@+id/quantaty_text"
        android:layout_toRightOf="@+id/less_button"
        android:paddingLeft="5dp"
        android:textAlignment="center"
        android:textColor="@color/generic_black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:layout_below="@+id/order_button"
        android:id="@+id/total_string"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:textColor="@color/generic_black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/total_string"
        android:id="@+id/total_due"
        android:layout_below="@+id/order_button"
        android:paddingTop="10dp"
        android:textColor="@color/generic_black"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/less_button"
        android:id="@+id/order_button"
        android:text="@string/order"
        android:onClick="calculateTotal"/>


</RelativeLayout>
